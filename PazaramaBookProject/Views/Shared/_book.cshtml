@model BookEntity
<div class="card mb-3 col-6">
    <div class="row">
        <div class="col-md-3">
            <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.BookID">
                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid" />


            </a>
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <div>
                    <a class="btn btn-primary" asp-controller="Book" asp-action="Details" asp-route-id="@Model.BookID">Detail</a>

                    <a class="btn btn-warning" asp-controller="Book" asp-action="Edit" asp-route-id="@Model.BookID">Edit </a>
                    <form asp-controller="Book" asp-action="Delete" asp-route-id="@Model.BookID" method="post" style="display:inline;">
                        <input type="hidden" name="Title" value="@Model.Title" />
                        <input type="hidden" name="BookID" value="@Model.BookID" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>